{%- macro link(text, href, target='_self') -%}
  <a href="{{ href | url }}" target="{{ target }}">{{ text }}</a>
{%- endmacro -%}

{%- macro tag(tag) -%}
  {% set tagUrl %}/tags/{{ tag }}/{% endset %}
  <a href="{{ tagUrl | url }}" class="bg-green-200 hover:bg-green-400 px-2 mx-1 my-1">{{ tag }}</a>
{%- endmacro -%}
